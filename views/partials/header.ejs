<body>


  <%if(user) {%>

      

    <div class="container-fluid overflow-hidden">
      <div class="row vh-100 overflow-auto">
          <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bgdark d-flex sticky-top">
              <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2">
            <a href="/" class="d-flex align-items-center pb-sm-3 mb-md-0 me-md-auto text-decoration-none">
              <span class="d-none d-sm-inline"><img class="logo d-none d-sm-inline" src="../images/new2.png" height="50px" alt="logo"></span>
            </a> 
            <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start" id="menu">
              <li class="nav-item">
                <% if (locals.title && locals.title==='Home' ) { %>
                  <a href="/" class="nav-link px-sm-2 px-2 active" id="active">
                    <% } else { %>
                      <a href="/" class="nav-link px-sm-2 px-2 link-light">
                        <% } %>
                          <i class="bi bi-house-fill"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                      </a>
              </li>

              <li class="nav-item">
                <% if (locals.title && locals.title==='Timesheet' ) { %>
                  <a href="/time" class="nav-link px-sm-2 px-2 active" id="active">
                    <% } else { %>
                      <a href="/time" class="nav-link px-sm-2 px-2 link-light">
                        <% } %>
                          <i class="bi bi-calendar-week-fill"></i> <span
                            class="ms-1 d-none d-sm-inline">Timesheet</span>
                      </a>
              </li>

              <li class="nav-item">
                <% if (locals.title && locals.title==='Users' ) { %>
                  <a href="/users" class="nav-link px-sm-2 px-2 active" id="active">
                    <% } else { %>
                      <a href="/users" class="nav-link px-sm-2 px-2 link-light">
                        <% } %>
                          <i class="bi bi-people-fill"></i> <span class="ms-1 d-none d-sm-inline">Users</span>
                      </a>
              </li>

              <li class="nav-item">
                <% if (locals.title && locals.title==='Location Manager' ) { %>
                  <a href="/locationManager" class="nav-link px-sm-2 px-2 active" id="active">
                    <% } else { %>
                      <a href="/locationManager" class="nav-link px-sm-2 px-2 link-light">
                        <% } %>
                          <i class="bi bi-geo-alt-fill"></i> <span class="ms-1 d-none d-sm-inline">Location</span>
                      </a>
              </li>

              <li class="nav-item">
                <% if (locals.title && locals.title==='Activity Manager' ) { %>
                  <a href="/activity/<%= user.id%>" class="nav-link px-sm-2 px-2 active" id="active">
                    <% } else { %>
                      <a href="/activity/<%= user.id %>" class="nav-link px-sm-2 px-2 link-light">
                        <% } %>
                          <i class="bi bi-activity"></i> <span class="ms-1 d-none d-sm-inline">Activity</span>
                      </a>
              </li>
            </ul>
            <hr>
                <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">Name</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
          </div>
        </div>








        <section class="col d-flex flex-column h-sm-100">
          <main class="row overflow-auto">

          <div id="messageContainer">
            <% if (locals.messages && locals.messages.length> 0) { %> <% if (messages.length> 0) { %> <%
                  messages.forEach(msg=> { %>
                  <div class="alert alert-primary" role="alert">
                    <%= msg %>
                  </div>
                  <% }) %>
                    <% } %>
                      <% } %>
          </div>

          <% if (typeof messages !=='undefined' && messages.error) { %>
            <div class="alert alert-danger" role="alert">
              <%= messages.error %>
            </div>
            <% } %>


              <%}%>