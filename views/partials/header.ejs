<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <% if (locals.title) { %>
    <title>Numbat <%=title%>
    </title>
    <% } else { %>
      <title>Numbat</title>
      <% } %>
